{
  "compilerOptions": {
    // Enable latest features
    "types": ["bun-types"],
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "CommonJS",

    // Bundler mode
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    "outDir": "lib"
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts"]
}
